<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--输入框样式-->
    <style name="Edit_text">
        <item name="android:background">@null</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <!--注册按钮样式-->
    <style name="Register_Reminder_Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/reminder_btn</item>
        <item name="android:text">@string/not_register_info</item>
        <item name="android:fontFamily">@font/mashanzhengmaobikaishu</item>
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="android:clickable">true</item>
    </style>

    <!--忘记密码按钮样式-->
    <style name="Forget_Pwd_Reminder_Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/reminder_btn</item>
        <item name="android:text">@string/forget_pwd_info</item>
        <item name="android:fontFamily">@font/mashanzhengmaobikaishu</item>
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="android:clickable">true</item>
    </style>

    <!--渐变圆角矩形按钮样式-->
    <style name="Gradient_Rounded_Rectangle_Button">
        <item name="android:background">@drawable/gradient_rounded_rectangle_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--圆角矩形线性布局-->
    <style name="Rounded_Rectangle_Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/rounded_rectangle_linear</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Leaf_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/leaf_textview</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Table_Linear">
        <item name="android:layout_width">@dimen/table_row_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/table_background_color</item>
    </style>

    <style name="Player_Background">
        <item name="android:background">@drawable/player_background</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="Title_Font_MaterialToolbar">
        <item name="android:fontFamily">@font/hanyixiaomaitijian</item>
        <item name="android:textSize">@dimen/fragment_toolbar_title_size</item>
    </style>
</resources>